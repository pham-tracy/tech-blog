<div class="text-center">

{{!-- Update post form --}}
  <div class="col-md-6 hide update-post-form mx-auto">
    <h2>Update Post:</h2>

    <h2>{{title}}</h2>
  <p>{{contents}}</p>
  <p class="commenter-info">Created by {{user.name}} on {{format_date date_created}}</p>

  <hr>

    <form class="form update-post-form">
      <div class="form-group">
        <label for="post-name">New Title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" />
      </div>
      
      <div class="form-group">
        <label for="post-body">New Content:</label>
        <textarea class="form-input" id="post-body" name="post-body"></textarea>
      </div> 
      
      <div class="form-group">
        <button type="submit" class="btn btn-primary updateBtn" data-id="{{id}}">Update Post</button>

        <button class="btn btn-primary btn-danger deleteBtn" data-id="{{id}}">Delete Post</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/update_post.js"></script> 
