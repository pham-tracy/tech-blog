<div class="col-md-6">
    <h3>Create New Post:</h3>
    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-name">Title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" />
      </div>
      <div class="form-group">
        <label for="post-body">Content:</label>
        <textarea class="form-input" id="post-body" name="post-body"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary create-btn">Create Post</button>
      </div>
    </form>
</div>



<!-- Loop over each object in the posts -->

{{#if posts.length}}
<div class="col-md-6 current-post">
    <h3>Current Posts:</h3>

{{#each posts as |post|}}
  <div class="row justify-content-center">
    <div class="col-sml-8">
      <h2><a href="/post/{{post.id}}"> {{post.title}}</a></h2>
      <br>

      </h2>
    </div>

    <div class="col-sml-8">
    <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
    </div>
  </div>
{{/each}}{{/if}}
</div>

<script src="/js/new_post.js"></script> 