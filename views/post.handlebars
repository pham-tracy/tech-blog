<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{contents}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
{{!-- 
 <div class="col-sml-8">
    <button class="btn btn-sm btn-danger deleteBtn" data-id="{{post.id}}">Delete Post</button>
