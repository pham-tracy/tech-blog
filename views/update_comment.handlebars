{{#if logged_in}}
{{!-- 
Update comment form --}}
      <div class="col-md-6 hide update-comment-form">
    <h3>Update Comment:</h3>
    <form class="form update-comment-form">
        <label for="comment-body">Comment:</label>
        <textarea class="form-input" id="comment-body" name="comment-body"></textarea>
      </div> 
      <div class="form-group">
        <button type="submit" class="btn btn-primary updateCommentBtn" data-id="{{id}}">Update Comment</button>
        

    <button class="btn btn-primary btn-danger deleteCommentBtn" data-id="{{id}}">Delete Comment</button>
   
   <p class="postID" data-id="{{post.id}}">Post ID: {{post.id}}</p>
      </div>
    </form>


    {{else}}
    <a href="/login"><h1>Please login</h1></a>
 
    {{/if}}


</div>

<script src="/js/update_comment.js"></script> 
